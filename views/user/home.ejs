    <script>
        const bannerImages = document.querySelector('.banner-images');
        const banners = document.querySelectorAll('.banner-img');
        const overlay = document.querySelector('.banner-overlay');
        const artistName = document.getElementById('artist-name');
        const releaseYear = document.getElementById('release-year');
        const artistDetails = document.getElementById('artist-details');
        const albumDetails = document.getElementById('album-details');
    
        let currentIndex = 0;
        const totalBanners = banners.length;
        let interval;
    
        // Function to update overlay details based on the current image
        function updateDetails(index) {
            const currentBanner = banners[index];
            artistName.textContent = currentBanner.getAttribute('data-artist');
            releaseYear.textContent = `Release Year: ${currentBanner.getAttribute('data-year')}`;
            artistDetails.textContent = `About Artist: ${currentBanner.getAttribute('data-artist-details')}`;
            albumDetails.textContent = `About Album: ${currentBanner.getAttribute('data-album-details')}`;
        }
    
        // Function to show the next banner
        function showNextBanner() {
            currentIndex = (currentIndex + 1) % totalBanners;
            bannerImages.style.transform = `translateX(-${currentIndex * 100}%)`;
            updateDetails(currentIndex);
        }
    
        // Start the interval
        function startInterval() {
            interval = setInterval(showNextBanner, 3000);
        }
    
        // Pause the interval on hover
        function pauseInterval() {
            clearInterval(interval);
        }
    
        const banner = document.querySelector('.banner');
        banner.addEventListener('mouseover', pauseInterval);
        banner.addEventListener('mouseleave', startInterval);
    
        // Initialize the first details and start animation on page load
        updateDetails(currentIndex);
        startInterval();

        
    </script>
    









    
  
    
    

